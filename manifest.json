{
  "manifest_version": 2,
  "name": "YouTube Pause Prompt",
  "version": "1.0",
  "description": "Pauses YouTube videos at a specified percentage with optional repeated intervals.",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["src/content.js"]
    }
  ],
  "browser_action": {
    "default_popup": "src/popup.html"
  }
}
